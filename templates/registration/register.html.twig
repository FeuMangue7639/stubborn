{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<header class="header">
    <div class="container">
        <div class="logo">
            <h1>Stubborn</h1>
            <p>Slogan</p>
        </div>
        <nav class="nav">
            <a href="{{ path('home') }}">Accueil</a>
            <a href="{{ path('app_register') }}" class="active">S'inscrire</a>
            <a href="{{ path('app_login') }}">Se connecter</a>
        </nav>
    </div>
</header>

<main class="register-page">
    <div class="container">
        <div class="register-box">
            <h2>S'inscrire</h2>
            <form method="post" action="{{ path('app_register') }}">
                <div class="form-group">
                    <label for="name">Nom utilisateur :</label>
                    <input type="text" name="name" id="name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">Adresse mail :</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="deliveryAddress">Adresse de livraison :</label>
                    <input type="text" name="deliveryAddress" id="deliveryAddress" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="confirm_password">Confirmer le mot de passe :</label>
                    <input type="password" name="confirm_password" id="confirm_password" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Créer un compte</button>
                <div class="divider"></div>
                <p class="already-registered">
                    Déjà inscrit ?
                    <a href="{{ path('app_login') }}" class="btn btn-secondary">Se Connecter</a>
                </p>
            </form>
        </div>
    </div>
</main>

<footer class="footer">
    <div class="container">
        <p>Nom de la société : Stubborn <br/>
Adresse : Piccadilly Circus, London W1J 0DA, Royaume-Uni <br/>
Adresse de contact : stubborn@blabla.com</p>
    </div>
</footer>
{% endblock %}

