{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<header class="header">
    <div class="container">
        <div class="logo">
            <img src="{{ asset('images/logo.png') }}" alt="Logo Stubborn" class="logo-img">
            <p>Don't compromise on your look</p>
        </div>
        <nav class="nav">
            <a href="{{ path('home') }}">Accueil</a>
            <a href="{{ path('app_register') }}" class="active">S'inscrire</a>
            <a href="{{ path('app_login') }}">Se connecter</a>
        </nav>
    </div>
</header>

<main class="register-page">
    <div class="register-box">
        <h2>S'inscrire</h2>
        {{ form_start(registrationForm, { 'attr': { 'class': 'form' } }) }}
            <div class="form-group">
                {{ form_label(registrationForm.name, 'Nom utilisateur :') }}
                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.email, 'Adresse mail :') }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.deliveryAddress, 'Adresse de livraison :') }}
                {{ form_widget(registrationForm.deliveryAddress, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.password, 'Mot de passe :') }}
                {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
            </div>

            {# Le bouton généré automatiquement #}
            {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn btn-primary btn-block'}}) }}

            {{ form_rest(registrationForm) }}
        {{ form_end(registrationForm) }}
        <div class="divider"></div>
        <p class="already-registered">
            Déjà inscrit ?
            <a href="{{ path('app_login') }}" class="btn btn-secondary">Se Connecter</a>
        </p>
    </div>
</main>

<footer class="footer">
    <div class="container">
        <p>Nom de la société : Stubborn <br/>
        Adresse : Piccadilly Circus, London W1J 0DA, Royaume-Uni <br/>
        Adresse de contact : stubborn@blabla.com</p>
    </div>
</footer>
{% endblock %}
