{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Size</th>
                <th>Stock</th>
                <th>IsHighlighted</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.size }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.isHighlighted ? 'Yes' : 'No' }}</td>
                <td>{{ product.image }}</td>
                <td>
                    <a href="{{ path('app_product_crud_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_product_crud_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_crud_new') }}">Create new</a>
{% endblock %}
