{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<header class="header">
    <div class="container">
        <div class="logo">
            <h1>Stubborn</h1>
        </div>
    </div>
</header>

<main class="cart-page">
    <div class="container">
        <h1>Votre panier</h1>

        {% if cart|length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Sous-total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for id, item in cart %}
                        <tr>
                            <td>{{ item.name }}</td>
                            <td>{{ item.price }} €</td>
                            <td>
                                <form method="post" action="{{ path('cart_update', { id: id }) }}">
                                    <input type="number" name="quantity" value="{{ item.quantity }}" min="1" class="form-control" />
                                    <button type="submit" class="btn btn-primary">Modifier</button>
                                </form>
                            </td>
                            <td>{{ (item.price * item.quantity)|number_format(2, '.', '') }} €</td>
                            <td>
                                <a href="{{ path('cart_remove', { id: id }) }}" class="btn btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <h3>Total : {{ total|number_format(2, '.', '') }} €</h3>
        {% else %}
            <p>Votre panier est vide.</p>
        {% endif %}

        <a href="{{ path('product_list') }}" class="btn btn-secondary">Retour à la boutique</a>
    </div>
</main>
{% endblock %}
