{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Votre panier</h1>

    {% if cart|length > 0 %}
        <table>
    <thead>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Sous-total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for id, item in cart %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.price }} €</td>
                <td>
                    <form method="post" action="{{ path('cart_update', { id: id }) }}">
                        <input type="number" name="quantity" value="{{ item.quantity }}" min="0" class="form-control" />
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </form>
                </td>
                <td>{{ item.price * item.quantity }} €</td>
                <td>
                    <a href="{{ path('cart_remove', { id: id }) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>


        <h3>Total : {{ total }} €</h3>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}

    <a href="{{ path('product_list') }}">Retour aux produits</a>
{% endblock %}
