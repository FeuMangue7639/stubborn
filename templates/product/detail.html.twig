{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<header class="header">
    <div class="container">
        <div class="logo">
            <h1>Stubborn</h1>
            <p>Slogan</p>
        </div>
        <nav class="nav">
            <a href="{{ path('home') }}">Accueil</a>
            <a href="{{ path('product_list') }}">Boutique</a>
            <a href="{{ path('cart') }}">Panier</a>
            <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </nav>
    </div>
</header>

<main class="product-page">
    <div class="container">
        <!-- Bloc commun -->
        <div class="product-container">
            <!-- Image du produit -->
            <div class="product-image">
                <img src="{{ asset(product.image) }}" alt="{{ product.name }}">
            </div>

            <!-- Détails du produit -->
            <div class="product-details">
                <h2>{{ product.name }}</h2>
                <p><strong>Prix :</strong> {{ product.price }} €</p>

                <!-- Taille -->
                <div class="form-group">
                    <label for="size">Taille :</label>
                    <select id="size" class="form-control">
                        <option>XS</option>
                        <option>S</option>
                        <option>M</option>
                        <option>L</option>
                        <option>XL</option>
                    </select>
                </div>

                <!-- Formulaire pour ajouter au panier -->
                <form method="post" action="{{ path('cart_add', { id: product.id }) }}">
                    <button type="submit" class="btn btn-primary">Ajouter au panier</button>
                </form>
            </div>
        </div>
    </div>
</main>

<footer class="footer">
    <div class="container">
        <p>Nom de la société : Stubborn <br/>
        Adresse : Piccadilly Circus, London W1J 0DA, Royaume-Uni <br/>
        Adresse de contact : stubborn@blabla.com</p>
    </div>
</footer>
{% endblock %}
