{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<header class="header">
    <div class="container">
        <div class="logo">
            <h1>Stubborn</h1>
            <p>Don't compromise on your look</p>
        </div>
        <nav class="nav">
            <a href="{{ path('home') }}">Accueil</a>
            <a href="{{ path('app_register') }}">S'inscrire</a>
            <a href="{{ path('app_login') }}" class="active">Se connecter</a>
        </nav>
    </div>
</header>

<main class="login-page">
    <div class="login-container">
        <div class="login-box">
            <h2>Se connecter</h2>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}.
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="username">Email utilisateur :</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn btn-primary btn-block">Se connecter</button>

                <a href="#" class="forgot-password">Mot de passe oublié</a>

                <!-- Ligne de séparation -->
                <hr class="separator">

                <p class="not-registered">
                    Pas encore inscrit ?
                    <a href="{{ path('app_register') }}" class="btn btn-secondary btn-block">Créer un compte</a>
                </p>
            </form>
        </div>
    </div>
</main>

<footer class="footer">
    <div class="container">
        <p>Nom de la société : Stubborn <br/>
Adresse : Piccadilly Circus, London W1J 0DA, Royaume-Uni <br/>
Adresse de contact : stubborn@blabla.com</p>
    </div>
</footer>
{% endblock %}

